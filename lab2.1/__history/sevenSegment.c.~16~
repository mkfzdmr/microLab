#include <16f887a.h> 
#use delay(clock=4000000) 
//#use fast_io(b)
#define segmentBirler   pin_a2


const char sSegment[10]={0x3F,0x06,0x5B,0x4F,0x66,0x6D,0x7D,0x07,0x7F,0x6F };

void main()
{
   set_tris_d(0x00);
   set_tris_a(0x00);
   output_high(segmentBirler);

   int i=0;
   
   while(1)
   {
   
         output_d(sSegment[i]);      
         delay_ms(500);
         i=(i+1)%10; 
   }
   
}

